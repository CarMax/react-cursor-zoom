{
  "name": "react-cursor-zoom",
  "version": "1.2.2",
  "description": "A react component that uses a high-res source image to produce a zoom window on mouse hover",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "webpack --progress --colors && npm run build-lib",
    "build-lib": "babel src --out-dir lib --ignore app.js,demo.jsx",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CarMax/react-cursor-zoom.git"
  },
  "keywords": [
    "react",
    "react-component",
    "image",
    "cursor",
    "magnifier",
    "zoom"
  ],
  "author": "CarMax",
  "license": "MIT",
  "peerDependencies": {
    "react": "15.x"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jest": {
    "testRegex": "(/test/.*|\\.(test|spec))\\.(js|json|jsx)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "del": "^2.2.2",
    "eslint": "^3.5.0",
    "eslint-plugin-react": "^6.3.0",
    "jest": "^15.1.1",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.1",
    "react-test-renderer": "^15.3.2",
    "webpack": "^1.13.2"
  }
}
